<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/css/userinfo.css"/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>Profile</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" >
        <span class="navbar-brand" style="color:orangered">Dojo Shop</span>
       <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            <li class="nav-item active">
              <a href="/userinfo" class="nav-item nav-link ">Profile</a>
            </li>
            <li class="nav-item ">
                    <a href="/updateinfo" class="nav-item nav-link">Update info</a>
            </li>
        </ul>
            <form class="form-inline my-2 my-lg-0">
                <a href="/UserDashboard" class="btn btn-outline-success my-2 my-sm-0">Dashboard</a>
                <a href="/logout" class="btn btn-outline-success my-2 my-sm-0">logout</a> 
            </form>
        </div>
    </nav>


    <div id="container">
        <div class="bg-light sidebar" id="info">
            <img src="" alt="profile image">
            <p class="text-primary">First Name:@ViewBag.profile.first_name</p>
            <p class="text-primary">Last Name: @ViewBag.profile.last_name</p>
            <p class="text-primary">Email: @ViewBag.profile.email</p>
            <p class="text-primary">Join Time:  @ViewBag.profile.created_at.ToString("MMM yyyy")</p>   
        </div> 
       <div id="table">
            <table class="table ">
                <thead class="bg-light">
                    <th>order number</th>
                    <th>order date</th>
                    <th>Product Name</th>
                    <th>price</th>
                    <th>qunatity</th>         
                </thead>
                <tbody>
                    @foreach(var order in @ViewBag.profile.UserOrder){
                    <tr>
                        <td>@order.id</td>
                        <td>@order.created_at.ToString("MMM dd yyyy")</td>
                        <td>@order.product.name</td>
                        <td>@order.price</td>
                        <td>@order.amount</td>
                        
                        
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>