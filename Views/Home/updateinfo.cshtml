<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/css/updateinfo.css"/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>Your Orders</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" >
        <span class="navbar-brand" style="color:orangered">Dojo Shop</span>
       <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            <li class="nav-item">
              <a href="/userinfo" class="nav-item nav-link">Profile</a>
            </li>
            <li class="nav-item active">
                    <a href="/updateinfo" class="nav-item nav-link ">Update info</a>
            </li>
        </ul>
            <form class="form-inline my-2 my-lg-0">
                <a href="/UserDashboard" class="btn btn-outline-success my-2 my-sm-0">Dashboard</a>
                <a href="/logout" class="btn btn-outline-success my-2 my-sm-0">logout</a> 
            </form>
        </div>
    </nav>
    <div id="container">
        <div id="address">
            <table class="table">
                <thead>
                    <th>address</th>
                    <th>apt #</th>
                    <th>zipcode</th>
                    <th>city</th>
                    <th>state</th>
                </thead>
                <tbody>
                    @foreach(var address in @ViewBag.AddressBook){
                        <tr>
                            <td>@address.address</td>
                            <td>@address.apt</td>
                            <td>@address.zipcode</td>
                            <td>@address.city</td>
                            <td>@address.state</td>
                        </tr>
                    }
                </tbody>
                <tbody>
                    
                </tbody>
            </table>
            <div id="profile">
                @model RegisterViewModel
                <form asp-action="ProfileChange" method="POST" asp-controller="Home">
                    <span asp-validation-for="first_name" style="color:red"></span> 
                    <label asp-for="first_name">First Name:</label>
                    <input type="text" asp-for="first_name" value=@ViewBag.profile.first_name>
                    <span asp-validation-for="last_name" style="color:red"></span> 
                    <label asp-for="last_name">Last Name:</label>
                    <input type="text" asp-for="last_name" value=@ViewBag.profile.last_name>
                    <span asp-validation-for="register_email" style="color:red"></span> 
                    <label asp-for="register_email">email:</label>
                    <input type="text" asp-for="register_email" value=@ViewBag.profile.email>
                <button type="submit">update</button>
                </form>
            </div>
             @Html.Partial("createaddress.cshtml")
        </div>
    
    </div>
</body>
</html>