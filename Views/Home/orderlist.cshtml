<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="~/css/list.css"/>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" >
        <span class="navbar-brand" style="color:orangered">Dojo Shop</span>
       <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            <li class="nav-item">
              <a href="/products" class="nav-item nav-link">Product</a>
            </li>
            <li class="nav-item">
                    <a href="/categories" class="nav-item nav-link">Category</a>
            </li>
            <li class="nav-item">
                <a href="/Customers" class="nav-item nav-link">Customers</a>
            </li>
            <li class="nav-item active">
                <a href="/orders" class="nav-item nav-link">Orders</a>
            </li>
        </ul>
            <form class="form-inline my-2 my-lg-0">
                <a href="/dashboard" class="btn btn-outline-success my-2 my-sm-0">Dashboard</a>
                <a href="/logout" class="btn btn-outline-success my-2 my-sm-0">logout</a> 
            </form>
        </div>
    </nav>
    <div id="container">
        <h1>All Orders</h1>
        <table class="table">
            <thead class="thead-dark">
                <th>Customer Name</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Created Time</th>
            </thead>
            <tbody>
                @foreach(var order in @ViewBag.allOrder){
                    <tr>
                        <th>@order.user.first_name @order.user.last_name</th>
                        <th>@order.product.name</th>
                        <th>@order.amount</th>
                        <th>@order.created_at</th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    
</body>
</html>